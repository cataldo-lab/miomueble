{
    "product":{
        "name":{
            "type": "string",
            "required": true

        },
        "price":{
            "type": "Number",
            "required": true
        },
        "quantity":{
            "type": "Number",
            "required": true

        },
        "description":{
            "type": "string"
        },
        "category":{
            "type": "Schema.Object.ID",
            "ref":"Category"
        },

        "status":{
            "type": "Schema.Object.ID",
            "ref":"Status"

},

"category":{
    "name":{
        "type":"string",
        "required":true
}
},

"status":{
    "name":{
        "type":"String",
        "required":true,
        "minLength":1,
        "maxLength":100,
        "enum":[
            "active",
            "inactive"
        ]
    }
},

"users":{
    "name":{
        "type":"String",
        "required":true
    },
    "email":{
        "type":"String",
        "required":true
    },
    "password":{
        "type":"String",
        "required":true
    },
    "role":{
        "type":"String",
        "enum":[
            "admin",
            "user"
        ],
        "default":"user"

    },
    "cart":{
        "type":"Schema.Object.ID",
        "ref":"Cart"
    }
},

"cart":{
    "products":{
        "type":[
            "Schema.ObjectId"
        ],
        "ref":"Product"
    }
}


}